.blue {
  stop-color: hsl(220, 100%, 60%);
  stop-opacity: 1;
}

.magenta {
  stop-color: hsl(300, 100%, 50%);
  stop-opacity: 1;
}

.dark {
  stop-color: hsl(220, 0%, 0%);
  stop-opacity: 1;
}

var s_step = 1;
var l_step = 0.6;


function myFunction() {

	var dark_shades = document.querySelectorAll(".dark");
  var blue_shades = document.querySelectorAll(".blue");
console.log(dark_shades[0].style);
console.log(dark_shades[0].style.stopColor);
  	let dark_hsl_s = Number(dark_shades[0].style.stopColor.match(/(?<=,\s)\d+(?=\W,)/)[0]);
    let dark_hsl_l = Number(dark_shades[0].style.stopColor.match(/(?<=\W,\s)\d+(?=\W)/)[0]);
    s_step = dark_hsl_s == 0 | 100 ? s_step * (-1) : s_step;
    l_step = dark_hsl_s == 0 | 100 ? l_step * (-1) : l_step
    dark_hsl_s += s_step;
    dark_hsl_l += l_step;
    
    let blue_hsl_s = Number(dark_shades[0].style["stop-color"].match(/(?<=,\s)\d+(?=\W,)/)[0]);
    let blue_hsl_l = Number(dark_shades[0].style["stop-color"].match(/(?<=\W,\s)\d+(?=\W)/)[0]);
    blue_hsl_s -= s_step;
    blue_hsl_l -= l_step;
    
    for(let i = 0; i < 2; i++) {
    	dark_shades[i].style['stop-color'] = `hsl(220, ${dark_hsl_s}%, ${dark_hsl_l}%)`;
      blue_shades[i].style['stop-color'] = `hsl(220, ${blue_hsl_s}%, ${blue_hsl_l}%)`;
    }

}


