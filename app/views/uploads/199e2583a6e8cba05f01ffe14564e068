  var flags = document.querySelectorAll(".flag");
  var articles = document.querySelectorAll("article");
	var body = document.querySelector("body");
  window.onload = () => {

    var docHeight = document.querySelector("html").scrollHeight;

    for (let i = 0; i < flags.length; i++) {

      flags[i].addEventListener("click", function() {
        articles[i].style.height = docHeight;
        var article_to_hide_class = "." + this.id;
        var article_to_hide = document.querySelector(article_to_hide_class);
        var article_to_display;
        if (article_to_hide_class == ".deu") {
          article_to_display = document.querySelector(".eng");
        } else {
          article_to_display = document.querySelector(".deu");
        }
        article_to_hide.style.visibility = "hidden";
        article_to_display.style.visibility = "visible";
      })
    }
  }

